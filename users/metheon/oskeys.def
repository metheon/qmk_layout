// danish letters
OSKEY(KC_AE,        RALT(KC_Q),            RALT(KC_QUOT))       // Æ
OSKEY(KC_OE,        RALT(KC_L),            RALT(KC_O))          // Ø
OSKEY(KC_AA,        RALT(KC_W),            RALT(KC_A))          // Å
OSKEY(KC_AC_E,      RALT(KC_G),            KC_NO)               // É

// other symbols
OSKEY(KC_EUR,       RALT(KC_5),            LSFT(RALT(KC_2)))    // €
OSKEY(KC_PND,       RALT(KC_4),            RALT(KC_3))          // £

// clipboard
OSKEY(UNDO,         LCTL(KC_Z),            LGUI(KC_Z))          // Undo
OSKEY(CUT,          LCTL(KC_X),            LGUI(KC_X))          // Cut
OSKEY(COPY,         LCTL(KC_C),            LGUI(KC_C))          // Copy
OSKEY(PASTE,        LCTL(KC_V),            LGUI(KC_V))          // Paste

// utilities
OSKEY(LOCK,         LGUI(KC_ESC),          LCTL(LGUI(KC_Q)))    // Lock computer      
OSKEY(SEARCH,       LGUI(KC_SLSH),         LGUI(KC_SPACE))      // Search 
OSKEY(NXT_DSKT,     LGUI(LCTL(KC_DOWN)),   LCTL(KC_RIGHT))      // Next Desktop
OSKEY(PRV_DSKT,     LGUI(LCTL(KC_UP)),     LCTL(KC_LEFT))       // Previous Desktop
OSKEY(OVERVIEW,     KC_LGUI,               KC_NO)               // Overview/Exposé
OSKEY(DEL_WRD,      LCTL(KC_BSPC),         LALT(KC_BSPC))       // Delete word
OSKEY(ZOOM_AUD,     LCTL(LSFT(KC_A)),      LGUI(LSFT(KC_A)))    // Zoom Audio Off/On
OSKEY(ZOOM_VID,     LCTL(LSFT(KC_V)),      LGUI(LSFT(KC_V)))    // Zoom Video Off/On
OSKEY(HIDE_WIN,     KC_NO,                 LGUI(KC_H))          // Hide a Window

